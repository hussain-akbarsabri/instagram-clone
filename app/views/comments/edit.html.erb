<br><br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-7">
      <h2>Edit Your Comment</h2><br>
      <%= form_with model: @comment do |f| %>
        <div class="form-group row">
          <%= f.label :comment, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-7">
            <%= f.text_field :content, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2">
          </div>
          <div class="col-sm-9">
            <%= f.submit "Edit Your Comment", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
