<table>
  <tr>
    <th>Comments</th>
    <th>Maker</th>
    <th>On Which Post<th>
    <th>Show<th>
    <th>Edit<th>
    <th>Delete<th>
  </tr>
 
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.content %></td>
      <td><%= comment.user.username %></td>
      <td><%= comment.post.caption %></td>
      <td><%= link_to 'Show', comment_path(comment) %></td>
      <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
      <td><%= link_to 'Destroy', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
