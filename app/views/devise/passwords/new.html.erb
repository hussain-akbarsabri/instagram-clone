<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-3">
      <br><br><br><br><br><br><br><br> <%= image_tag "login_logo" %>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <br>Enter your email and we'll send you a link to get back into your account.
        <div class="field">
          <br>
          <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
        </div>

        <div class="actions">
          <br>
          <%= f.submit "Send me reset link", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br><%= render "devise/shared/links" %>
    </div>
  </div>
</div>
