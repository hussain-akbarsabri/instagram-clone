<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-7">
      <br><br><br><br><br><br><br><br>
      <div class="img img-thumbnail devise-form">
        <div class="main">
          <%= image_tag "login_logo" %>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <br>Enter your email and we'll send you a link to get back into your account.
            <div class="field">
              <br>
              <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
            </div>

            <div class="actions">
              <br>
              <%= f.submit "Send me reset link", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div><br><br>
      <div class="img img-thumbnail devise-form ">
        <br><%= render "devise/shared/links" %><br>
      </div>
    </div>
  </div>
</div>
