<div class="main-content">
  <%= image_tag "instagram_image"  %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <br />
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "input-1" %>
    </div>

    <div class="field">
      <br>
      <%= f.text_field :username, autocomplete: "username", placeholder: "Username", class: "input-1" %>
    </div>

    <div class="field">
      <br>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "input-1" %>
    </div>

    <div class="field">
      <br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "input-1" %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
<br>
<div class="secondary-content">
  <%= render "devise/shared/links" %>
</div>

