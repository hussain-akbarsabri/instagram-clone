<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-4">
    </div>
    <div class="col-md-7">
      <br><br><br><br>
      <div class="img img-thumbnail devise-form">
        <div class="main">
          <%= image_tag("https://i.imgur.com/zqpwkLQ.png") %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field">
              <br><%= f.email_field :email, placeholder: "Email", class: "form-control" %>
            </div>
            <div class="field">
              <br><%= f.password_field :password, placeholder: "Password", class: "form-control" %>
            </div>
            <div class="field">
              <br><%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control" %>
            </div>
            <div class="field">
              <br><%= f.text_field :username, placeholder: "Username", class: "form-control" %>
            </div>
            <div class="field">
              <br><%= f.file_field :image, class: 'form-control' %>
            </div>
            <div class="actions">
              <br><%= f.submit "Sign up", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div><br><br>
      <div class="img img-thumbnail devise-form ">
        <br><%= render "devise/shared/links" %><br>
      </div>
    </div>
  </div>
</div>
