<header>
  <div class="container">
    <div class="row">
      <div class="col-md-4 header-logo">
        <%= link_to image_tag("https://i.imgur.com/zqpwkLQ.png"), root_path %>
      </div>
      <div class="col-md-3 header-search">
        <%= form_with url: search_users_path, local: true, method: :get, html: { class: "form-inline" } do |form| %>
          <%= form.text_field :q, placeholder: "Search", data: { behaviour: "autocomplete" }, class: "form-control" %>
        <% end %>
      </div>
      <div class="col-md-4 navbar_margin">
        <%= link_to '<i class="glyphicon glyphicon-home"></i>'.html_safe, root_path, class: "btn icons" %>
        <% if private_profile(current_user) %>
          <%= link_to '<i class="glyphicon glyphicon-inbox"></i>'.html_safe, request_path(current_user), class: "btn icons" %>
        <% end %>
        <div class="header-profile-wrapper">
          <% if current_user.image.attached? %>
            <%= link_to image_tag(current_user.image), user_path(current_user) %>
          <% else %>
            <%= link_to image_tag("https://thumbs.dreamstime.com/b/default-avatar-profile-icon-social-media-user-vector-default-avatar-profile-icon-social-media-user-vector-portrait-176194876.jpg"), user_path(current_user) %>
          <%end%>
        </div>
        <%= link_to '<i class="glyphicon glyphicon-log-out"></i>'.html_safe, destroy_user_session_path, :method => :delete, class: "btn icons" %>
      </div>
    </div>
  </div>
</header>
