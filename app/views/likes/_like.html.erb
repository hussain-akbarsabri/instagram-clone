<%= @post.likes.count %>
<% if many_likes(@post.likes.count) %>
  Likes
<% else %>
  Like
<% end %><br>

<% if liked(@post) %>
  <%= link_to '<i class="glyphicon glyphicon-heart"></i>'.html_safe, like_path(@post), method: :delete %>
<% else %>
  <%= link_to '<i class="glyphicon glyphicon-heart-empty"></i>'.html_safe, post_likes_path(@post), method: :post %>
<% end %>