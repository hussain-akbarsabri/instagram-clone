<br>
<div class="container">
  <div class="feed-post">
    <div class="row">
      <div class="col-md-1">
        <div class="post-profile-wrapper">
          <br><%= link_to image_tag(post.user.image), user_path(current_user) if post.user.image.attached? %>
        </div>
      </div>
      <div class="col-md-1">
        <br><br><%= link_to "#{post.user.username}", user_path(post.user), class: "username" %>
        <% if post_maker(current_user.id, post.user_id) %>
          <%= link_to '<i class="glyphicon glyphicon-cog"></i>'.html_safe, edit_post_path(post) %>
        <% end %>
      </div>
    </div><br>
    <div class="row">
      <div class="col-md-8">
        <div class="post-wrapper">
          <%= link_to image_tag(post.images.first), post_path(post) if post.images.attached? %>
        </div>
      </div>
    </div>
  </div>
</div><br>
    <div class="col-md-3">
      <br><br>
      <%= image_tag post.user.image, class: 'img-circle profile-image' if post.user.image.attached? %>
      <br><br><br><br><br>
      <%= link_to "#{post.user.username}", user_path(post.user) %>
      <hr><hr>
      <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
      <% pre_like = post.likes.find { |like| like.user_id == current_user.id} %>
      <% if pre_like %>
        <%= button_to 'Unlike', like_path(post, pre_like), method: :delete %>
      <% else %>
        <%= button_to 'Like', post_likes_path(post) %>
      <% end %>
      <%= post.caption %>
      <br><br>
      <% post.comments.each do |comment| %>
      <tr>
        <b><td><%= comment.user.username %></td></b>
        <td><%= comment.content %></td>
        <% if current_user.id == comment.user_id %>
          <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
          <td><%= link_to 'Destroy', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <br>
      <% end %>
      <%= link_to "Add Comment", new_post_comment_path(post) %>
      <br>
      <% if current_user.id == post.user_id %>
        <%= link_to 'Edit This Post', edit_post_path(post) %>
        <br>
        <%= link_to 'Delete This Post', post_path(post, post.user.id), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
</div>
