<br><br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-7">
      <h2>Edit Your Post</h2><br>
      <%= form_with model: @post do |f| %>
        <div class="form-group row">
          <%= f.label :caption, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-7">
            <%= f.text_field :caption, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :images, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-7">
          <%= f.file_field :images, multiple: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2">
          </div>
          <div class="col-sm-9">
            <%= f.submit "Update Your Post", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
