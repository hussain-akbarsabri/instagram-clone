<br><br><br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="edit-form">
        <br><br><br>
      </div>
    </div>
    <div class="col-md-8">
      <h2>Create New Post</h2>
      <%= form_with model: @post, url: user_posts_path do |f| %>

        <div class="form-group row">
          <%= f.label :caption, class: 'col-md-2 form-label' %>
          <div class="col-md-7">
            <%= f.text_field :caption, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Images, class: 'col-sm-2 form-label' %>
          <div class="col-sm-7">
            <%= f.file_field :images, multiple: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2">
          </div>
          <div class="col-sm-9">
            <%= f.submit "Create New Post", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
