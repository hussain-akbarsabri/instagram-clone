<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <h1>Create New Post</h1>
      <%= form_with model: @post, url: user_posts_path do |f| %>
        <div class="form-group row">
          <%= f.label :caption, class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-7">
            <%= f.text_field :caption, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :images, class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-7">
            <%= f.file_field :images, multiple: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-3">
          </div>
          <div class="col-sm-9">
            <%= f.submit "Create Post", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
