<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <h1>Create New Story</h1>
      <%= form_for @story, url: user_stories_path do |f| %>
        <div class="form-group row">
          <%= f.label :image, class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-7">
            <%= f.file_field :image, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-3">
          </div>
          <div class="col-sm-9">
            <%= f.submit "Create Story", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
