<br><br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-7">
      <h2>Create New Story</h2><br>
      <%= form_with model: @story, url: user_stories_path do |f| %>
        <div class="form-group row">
          <%= f.label :image, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-7">
            <%= f.file_field :image, required: true, accept: ['image/png', 'image/jpg', 'image/jpeg'], class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2">
          </div>
          <div class="col-sm-9">
            <%= f.submit "Create New Story", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
