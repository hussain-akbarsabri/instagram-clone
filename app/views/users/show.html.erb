<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @user.image, class: "img-circle" if @user.image.attached? %>
    </div>
    <div class="col-sm-8">
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <h1> <%= @user.username %> </h1>
          </div>
          <div class="col-md-1">
            <button class="btn"><%= link_to 'Edit', edit_user_path(@user) %></button>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-md-2">
            <h3> 0 Posts </h3>
          </div>
          <div class="col-md-2">
            <h3> 0 followers </h3>
          </div>
          <div class="col-md-2">
            <h3> 0 following </h3>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <h3> <%= @user.name %> </h3>
          </div>
          <div class="col-md-2">
            <h4> <%= @user.bio %> </h4>
          </div>
        </div>
      </div>

  </div>
</div>
